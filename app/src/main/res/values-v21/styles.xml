<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="gameInputStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/bg_game_input</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/cardview_default_elevation</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="bidPointsInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:maxLength">5</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:background">@drawable/bg_game_input</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="digitInput">
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/bg_game_input</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>
</resources>