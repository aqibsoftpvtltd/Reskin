<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <RelativeLayout
       android:layout_marginTop="@dimen/_6sdp"
       android:layout_width="match_parent"
       android:layout_height="@dimen/_130sdp">

       <View
           android:id="@+id/tabStartView"
           android:layout_centerVertical="true"
           android:layout_alignParentStart="true"
           android:layout_width="@dimen/_15sdp"
           android:layout_height="match_parent"/>

       <LinearLayout
           android:layout_centerVertical="true"
           android:layout_toEndOf="@+id/tabStartView"
           android:layout_toStartOf="@+id/tabEndView"
           android:id="@+id/tabGameDashboard"
           android:background="@drawable/dr_ractengle_less_round_ripple_effect"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center"
           android:orientation="vertical">

           <ImageView
               android:id="@+id/tvGameDashboard"
               android:layout_width="@dimen/_100sdp"
               android:layout_height="@dimen/_120sdp"
               android:padding="@dimen/_20sdp"
               android:background="@drawable/single_digit_back"
               />


<!--
           <TextView
               android:layout_marginTop="@dimen/_4sdp"
               android:id="@+id/tvGameDashboard"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/glacial_bold"
               android:gravity="center"
               android:maxLines="2"
               android:minLines="2"
               android:text="@string/single_digit"
               android:textColor="@color/black"
               android:textSize="@dimen/_13sdp" />
-->

       </LinearLayout>


       <View
           android:id="@+id/tabEndView"
           android:layout_centerVertical="true"
           android:layout_alignParentEnd="true"
           android:layout_width="@dimen/_15sdp"
           android:layout_height="match_parent"/>

   </RelativeLayout>
</layout>
