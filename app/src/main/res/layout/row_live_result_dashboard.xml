<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/tabSelection"
            android:background="@drawable/dr_ractengle_less_round_ripple_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_15sdp">

            <RelativeLayout
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_4sdp"
                android:paddingHorizontal="@dimen/_15sdp"
                android:background="@drawable/card_bg_round_15_transparent"
                android:elevation="@dimen/_2sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGameResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_bold"
                        android:gravity="start|center_vertical"
                        android:text="123-35-4"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:layout_marginTop="@dimen/_4sdp"
                        android:id="@+id/tvProviderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_bold"
                        android:gravity="start|center_vertical"
                        android:text="@string/morning_dhan"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />


                    <TextView
                        android:layout_marginTop="@dimen/_4sdp"
                        android:id="@+id/tvBattingStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_regular"
                        android:gravity="start|center_vertical"
                        android:text="@string/time"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grayColor"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/glacial_bold"
                            android:gravity="start|center_vertical"
                            android:text="@string/open_bids_"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7sdp" />

                        <TextView
                            android:layout_marginStart="@dimen/_2sdp"
                            android:id="@+id/tvBidOpenTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/glacial_regular"
                            android:gravity="start|center_vertical"
                            android:text="@string/open_bids_"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grayColor"
                            android:textSize="@dimen/_7sdp" />

                        <View
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:background="@color/grayColor"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/glacial_bold"
                            android:gravity="start|center_vertical"
                            android:text="@string/close_bids_"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7sdp" />

                        <TextView
                            android:layout_marginStart="@dimen/_2sdp"
                            android:id="@+id/tvBidCloseTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/glacial_regular"
                            android:gravity="start|center_vertical"
                            android:text="@string/open_bids_"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grayColor"
                            android:textSize="@dimen/_7sdp" />

                    </LinearLayout>


                    <FrameLayout
                        android:layout_marginTop="@dimen/_12sdp"
                        android:id="@+id/tabPlayGame"
                        style="@style/TextAppearance.AppCompat.Button"
                        android:background="@drawable/dr_ractengle_round_edge_solid_ripple_effect"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="@dimen/_105sdp"
                        android:layout_height="@dimen/_28sdp">

                        <RelativeLayout
                            android:layout_gravity="center"
                            android:id="@+id/tabInnerPlayGame"
                            android:background="@drawable/ractengle_gradian_round_edge"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/ivPlayGame"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/ic_play_round"
                                android:padding="@dimen/_2sdp"
                                android:background="@drawable/round_white"
                                app:tint="@color/appColorLight" />

                            <TextView
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/ivPlayGame"
                                android:id="@+id/tvPlayGame"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/glacial_regular"
                                android:text="@string/play_game"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp" />


                        </RelativeLayout>
                    </FrameLayout>

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>
</layout>
