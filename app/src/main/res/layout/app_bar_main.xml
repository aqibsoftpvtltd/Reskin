<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.NavigationMainActivity">

    <LinearLayout
        android:background="@drawable/ractengle_gradian_bottom_round_edge"
        android:orientation="vertical"
        android:elevation="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingHorizontal="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <LinearLayout
                android:layout_marginEnd="@dimen/_2sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tabOuterEnd"
                android:gravity="start|top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivToggle"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_menu"
                    android:background="@drawable/dr_ractengle_solid_ripple_effect"
                    android:padding="@dimen/_4sdp"
                    app:tint="@color/white" />

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/gameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/app_name_full"
                    android:maxLines="2"
                    android:gravity="start|center_vertical"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/glacial_bold" />

                    <TextView
                        android:id="@+id/gamedesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/app_desc"
                        android:maxLines="2"
                        android:gravity="start|center_vertical"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
 />

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/tabOuterEnd"
                android:layout_marginEnd="@dimen/_2sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tabWalletAmount"
                    android:gravity="start|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dr_ractengle_solid_ripple_effect"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/ic_wallet_new"
                        android:layout_gravity="center"
                        app:tint="@color/white" />


                    <TextView
                        android:layout_marginStart="@dimen/_4sdp"
                        android:id="@+id/tvWalletAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0000"
                        android:gravity="start|center_vertical"
                        android:background="@drawable/dr_ractengle_solid_ripple_effect"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/glacial_regular" />
                </LinearLayout>


                <FrameLayout
                    android:layout_marginStart="@dimen/_4sdp"
                    android:id="@+id/imgNotification1"
                    android:background="@drawable/dr_ractengle_solid_ripple_effect"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp">

                    <ImageView
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:src="@drawable/ic_notification_new"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tv_notification_counter"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:maxLength="2"
                        android:layout_margin="@dimen/_2sdp"
                        android:gravity="center"
                        android:background="@drawable/rounded_solid_white"
                        android:layout_gravity="end|top"
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/_8sdp"
                        android:fontFamily="@font/glacial_bold" />



                </FrameLayout>


                <FrameLayout
                    android:layout_marginStart="@dimen/_4sdp"
                    android:id="@+id/ivBroadcast"
                    android:visibility="gone"
                    android:background="@drawable/dr_ractengle_solid_ripple_effect"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp">

                    <ImageView
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:src="@drawable/announce_colored"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tv_bro_counter"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:maxLength="2"
                        android:layout_margin="@dimen/_2sdp"
                        android:gravity="center"
                        android:background="@drawable/rounded_solid_white"
                        android:layout_gravity="end|top"
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/_8sdp"
                        android:fontFamily="@font/glacial_bold" />



                </FrameLayout>



            </LinearLayout>


        </RelativeLayout>



        <LinearLayout
            android:id="@+id/tabHomePageView"
            android:paddingHorizontal="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginBottom="@dimen/_20sdp"

            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/cvKuberStarline"
                android:background="@drawable/dr_ractengle_round_edge_solid_ripple_effect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:layout_marginVertical="@dimen/_4sdp"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:background="@drawable/ractengle_solid_round_edge_white"
                    android:elevation="@dimen/_2sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_regular"
                        android:gravity="center"
                        android:text="@string/matka_starline"
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/_13sdp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cvKuberJackpot"
                android:background="@drawable/dr_ractengle_round_edge_solid_ripple_effect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:layout_marginVertical="@dimen/_4sdp"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:background="@drawable/ractengle_stroke_round_edge_white"
                    android:elevation="@dimen/_2sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_regular"
                        android:gravity="center"
                        android:text="@string/matka_jackpot"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                </RelativeLayout>

            </RelativeLayout>



        </LinearLayout>




    </LinearLayout>



    <include layout="@layout/content_main" />

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:background="@drawable/ractengle_gradian_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableTop="@drawable/view_history"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/regular"
                    android:onClick="onHistoryClick"
                    android:text="History"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_passbook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:drawableTop="@drawable/btn_passbook"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/regular"
                    android:onClick="onPassbookClick"
                    android:text="Passbook"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableTop="@drawable/btn_home"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/regular"
                    android:onClick="onHomeClick"
                    android:text="Home"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_fund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:drawableTop="@drawable/btn_fund"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/regular"
                    android:onClick="onFundClick"
                    android:text="Fund"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:drawableTop="@drawable/btn_chat"
                    android:drawableTint="@color/white"
                    android:fontFamily="@font/regular"
                    android:onClick="onChattingClick"
                    android:text="Chat Support"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12" />

                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/tv_chat_counter"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:maxLength="2"
                    android:layout_margin="@dimen/_2sdp"
                    android:gravity="center"
                    android:background="@drawable/rounded_solid_white"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/glacial_bold" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>