<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhite"
    android:fillViewport="true"
    tools:context=".ui.login_signup_pages.LoginSignUpActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_gravity="top|start"
            android:layout_marginTop="-90dp"
            android:layout_marginStart="-90dp"
            android:src="@drawable/ic_login_top" />


    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:layout_marginTop="@dimen/_150sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/hello_user_"
                    android:gravity="start|center_vertical"
                    android:textAlignment="viewStart"
                    android:textColor="@color/grayColor"
                    android:textSize="@dimen/_17sdp"
                    android:fontFamily="@font/glacial_regular" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/welcome_to"
                        android:textAllCaps="true"
                        android:gravity="start|center_vertical"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_19sdp"
                        android:fontFamily="@font/glacial_bold" />


                    <TextView
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/app_name"
                        android:gravity="start|center_vertical"
                        android:textAlignment="viewStart"
                        android:textColor="@color/appColorLight"
                        android:textSize="@dimen/_19sdp"
                        android:fontFamily="@font/glacial_bold" />

                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="@dimen/_33sdp"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/username"
                    app:boxStrokeColor="@color/appColor"
                    app:hintTextColor="@color/grayColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColorHint="@color/grayColor"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/glacial_regular"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    app:boxStrokeColor="@color/appColor"
                    app:hintTextColor="@color/grayColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUserPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColorHint="@color/grayColor"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/glacial_regular"/>

                </com.google.android.material.textfield.TextInputLayout>



                <FrameLayout
                    android:id="@+id/tabLogin"
                    android:background="@drawable/dr_ractengle_round_edge_solid_ripple_effect"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:id="@+id/tabInnerLogin"
                        android:background="@drawable/ractengle_gradian_round_edge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tvLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/glacial_regular"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_17sdp" />

                        <ImageView
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_width="@dimen/_37sdp"
                            android:layout_height="@dimen/_37sdp"
                            android:src="@drawable/ic_arrow_round"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/round_white"
                            app:tint="@color/appColorLight"
                            />

                    </RelativeLayout>
                </FrameLayout>


                <FrameLayout
                    android:id="@+id/tabMPINLogin"
                    android:background="@drawable/dr_ractengle_round_edge_solid_ripple_effect"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp">

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:id="@+id/tabInnerMPINLogin"
                        android:background="@drawable/ractengle_stroke_round_edge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/tvMPINLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/glacial_regular"
                            android:text="@string/mpin_login"
                            android:textAllCaps="true"
                            android:textColor="@color/grayColor"
                            android:textSize="@dimen/_15sdp" />


                    </RelativeLayout>
                </FrameLayout>



                <LinearLayout
                    android:id="@+id/tabSignup"
                    android:background="@drawable/dr_ractengle_solid_ripple_effect"
                    android:paddingVertical="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/not_a_player_"
                        android:gravity="start|center_vertical"
                        android:textAlignment="viewStart"
                        android:textColor="@color/grayColor"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/glacial_regular" />


                    <TextView
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="@string/signup"
                        android:gravity="start|center_vertical"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/glacial_bold" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/semibold"
                    android:gravity="center"
                    android:padding="@dimen/space_15"
                    android:text="@string/forgot_password"
                    android:textAllCaps="false"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_16" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="#828895" />

                <TextView
                    android:id="@+id/btnForgotUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/semibold"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Forgot Username?"
                    android:textAllCaps="false"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_16" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</FrameLayout>