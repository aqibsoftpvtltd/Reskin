    <LinearLayout
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/background_admin"
        android:layout_height="@dimen/_50sdp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/btnStarNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_gravity="end|center_vertical"
            android:checked="true"
            android:visibility="gone"
            android:theme="@style/CustomSwitchStyle"
            app:switchPadding="@dimen/_4sdp"
            android:fontFamily="@font/glacial_regular"
            android:text="@string/notifications"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <RelativeLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:minWidth="@dimen/_70sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansbold"
                        android:gravity="start|center_vertical"
                        android:text="@string/single_pana_"
                        android:textAlignment="viewStart"
                        android:textColor="@color/starline_textcolor_blck"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:layout_marginStart="@dimen/_4sdp"
                        android:minWidth="@dimen/_40sdp"
                        android:id="@+id/tvSinglePanna"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansbold"
                        android:gravity="start|center_vertical"
                        android:text="1-100"
                        android:textAlignment="viewStart"
                        android:textColor="@color/starline_textcolor_pink"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:minWidth="@dimen/_70sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansbold"
                        android:gravity="start|center_vertical"
                        android:text="@string/triple_pana_"
                        android:textAlignment="viewStart"
                        android:textColor="@color/starline_textcolor_blck"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:minWidth="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:id="@+id/tvTriplePana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansbold"
                        android:gravity="start|center_vertical"
                        android:text="1-100"
                        android:textAlignment="viewStart"
                        android:textColor="@color/starline_textcolor_pink"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

            </LinearLayout>

            
            <View
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/_1sdp"
                android:visibility="gone"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/grayColor"/>


            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:minWidth="@dimen/_70sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansbold"
                        android:gravity="start|center_vertical"
                        android:text="@string/double_pana_"
                        android:textAlignment="viewStart"
                        android:textColor="@color/starline_textcolor_blck"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:minWidth="@dimen/_40sdp"
                        android:id="@+id/tvDoublePana"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/dmsansbold"
                        android:gravity="start|center_vertical"
                        android:text="1-100"
                        android:textAlignment="viewStart"
                        android:textColor="@color/starline_textcolor_pink"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:minWidth="@dimen/_70sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansbold"
                        android:gravity="start|center_vertical"
                        android:text="@string/single_digit_"
                        android:textAlignment="viewStart"
                        android:textColor="@color/starline_textcolor_blck"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:minWidth="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:id="@+id/tvSingleDigit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansbold"
                        android:gravity="start|center_vertical"
                        android:text="1-100"
                        android:textAlignment="viewStart"
                        android:textColor="@color/starline_textcolor_pink"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/space_shape_line"
        android:paddingVertical="@dimen/_5sdp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvKsGameList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/row_starlinegame_list" />

    </LinearLayout>
</LinearLayout>