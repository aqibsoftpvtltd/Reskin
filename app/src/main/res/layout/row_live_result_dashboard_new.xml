<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/tabSelection"
            android:background="@drawable/dr_ractengle_less_round_ripple_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_15sdp">

            <RelativeLayout
                android:id="@+id/mainBg"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginVertical="@dimen/_4sdp"
                android:paddingHorizontal="@dimen/_15sdp"
                android:background="@drawable/card_bg_orange_border"
                android:elevation="@dimen/_2sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/firstLyt"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="@dimen/_4sdp"
                        android:id="@+id/tvProviderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansbold"
                        android:gravity="start|center_vertical"
                        android:text="@string/morning_dhan"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tvGameResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansmedium"
                        android:gravity="start|center_vertical"
                        android:text="123-35-4"
                        android:textAlignment="viewStart"
                        android:textColor="#D80027"
                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:layout_marginTop="@dimen/_4sdp"
                        android:id="@+id/tvBattingStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansmedium"
                        android:drawableLeft="@drawable/betting_status_icon"
                        android:gravity="start|center_vertical"
                        android:text="@string/time"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:layout_toLeftOf="@id/tabPlayGame"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"

                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansmedium"
                        android:gravity="start|center_vertical"
                        android:text="@string/open_bids_"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_7sdp" />

                    <TextView
                        android:layout_marginStart="@dimen/_2sdp"
                        android:id="@+id/tvBidOpenTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansregular"
                        android:gravity="start|center_vertical"
                        android:text="@string/open_bids_"
                        android:textAlignment="viewStart"
                        android:textColor="#419723"
                        android:textSize="@dimen/_7sdp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:layout_toRightOf="@id/firstLyt"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansmedium"
                        android:gravity="start|center_vertical"
                        android:text="@string/close_bids_"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_7sdp" />

                    <TextView
                        android:layout_marginStart="@dimen/_2sdp"
                        android:id="@+id/tvBidCloseTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansregular"
                        android:gravity="start|center_vertical"
                        android:text="@string/open_bids_"
                        android:textAlignment="viewStart"
                        android:textColor="#D80027"
                        android:textSize="@dimen/_7sdp" />

                </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabPlayGame"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:src="@drawable/play_button_new"
                      />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dmsansmedium"

                        android:text="Play Now"

                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>
</layout>
