<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:orientation="vertical"
    app:cardCornerRadius="35dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color_primary_20"
            android:fontFamily="@font/semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Your Bank Details"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_15"
            android:background="@drawable/rounded_black_stroke"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <RadioButton
                style="?selectableItemBackgroundBorderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                tools:ignore="RtlSymmetry" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:layout_column="1"
                        android:fontFamily="@font/semibold"

                        android:padding="5dp"
                        android:text="Account Holder Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/tvAccountHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:fontFamily="@font/regular"
                        android:freezesText="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:padding="5dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Rahul"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_12" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:fontFamily="@font/semibold"

                        android:padding="5dp"
                        android:text="Bank Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/tvBank"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:padding="5dp"
                        android:text="TransactionId"
                        android:textColor="@color/text_gray"

                        android:textSize="@dimen/text_12" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:fontFamily="@font/semibold"
                        android:textAlignment="textEnd"
                        android:padding="5dp"
                        android:text="Account No."
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/tvAccountNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/regular"
                        android:padding="5dp"
                        android:paddingRight="15dp"
                        android:text=""

                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_12" />
                </TableRow>

                <TableRow
                    android:id="@+id/tbl_wm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:fontFamily="@font/semibold"

                        android:padding="5dp"
                        android:text="Withdrawal Mode"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/tv_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/regular"
                        android:padding="5dp"
                        android:paddingRight="15dp"
                        android:text=""

                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_14" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:textAlignment="textEnd"
                        android:fontFamily="@font/semibold"

                        android:padding="5dp"
                        android:text="IFSC Code"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/tvIFSC"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:fontFamily="@font/regular"
                        android:padding="5dp"

                        android:text="TransactionId"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_12" />
                </TableRow>


            </TableLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:text="Do you want to continue with this bank details?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_15">


            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/btn_ok"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/ractengle_gradian_round_edge"
                android:fontFamily="@font/regular"
                android:text="Yes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/button_pink_stroke"
                android:fontFamily="@font/regular"
                android:text="No"
                android:textColor="@color/new_colorAccent"
                android:textSize="@dimen/text_14"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>