<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_login_signup"
    tools:context=".ui.activity.MpinPasswordChangedSuccessfullyActivity">
    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/imgVerified1"
        android:src="@drawable/password_success"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/imgVerified1"


        android:textAlignment="center"

        android:textSize="@dimen/text_18"
        android:textColor="#ffffff"
        android:fontFamily="@font/semibold"
        android:text="Password Changed Successfully!!!"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>