<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_dashboard_bg"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/_22sdp"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_20sdp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/cvAddFund"
                android:background="@drawable/dr_ractengle_less_round_ripple_effect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rvAddFunds"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_funds_icon"
                    android:orientation="vertical">




                </RelativeLayout>
                <TextView
                    android:layout_below="@id/rvAddFunds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/dmsansbold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/add_funds"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/cvWithdrawFund"
                android:background="@drawable/dr_ractengle_less_round_ripple_effect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rvWithDrawFunds"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/withdraw_funds_icon"
                    android:orientation="vertical">




                </RelativeLayout>
                <TextView
                    android:layout_below="@id/rvWithDrawFunds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/dmsansbold"
                    android:layout_marginTop="@dimen/_10sdp"


                    android:text="@string/withdraw_fund"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />







            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">
            <RelativeLayout

                android:id="@+id/cvFundRequestHistory"
                android:background="@drawable/dr_ractengle_less_round_ripple_effect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rvFundsRequestHistory"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/funds_request_history_icon"
                    android:orientation="vertical">




                </RelativeLayout>
                <TextView
                    android:layout_below="@id/rvFundsRequestHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/dmsansbold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/fund_request_history"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>


            <RelativeLayout

                android:id="@+id/card_accountstatements"
                android:background="@drawable/dr_ractengle_less_round_ripple_effect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rvAccountStatemnt"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/account_statements_icon"
                    android:orientation="vertical">




                </RelativeLayout>
                <TextView
                    android:layout_below="@id/rvAccountStatemnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/dmsansbold"
                    android:text="@string/account_statement"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/card_bank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dr_ractengle_less_round_ripple_effect"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rvAddBankDetails"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_bank_details_icon"
                    android:orientation="vertical">




                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rvAddBankDetails"
                    android:fontFamily="@font/dmsansbold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/add_bank_details_"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </RelativeLayout>
        </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>