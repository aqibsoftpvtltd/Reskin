<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_20sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/less_round_edge_ractengle_white"
            android:elevation="@dimen/_3sdp"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_12sdp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingVertical="@dimen/_15sdp">



              <TextView
                  android:id="@+id/tvCurrentTime"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/glacial_bold"
                  android:gravity="center"
                  android:text="@string/submit"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_17sdp" />


              <androidx.recyclerview.widget.RecyclerView
                  android:layout_marginTop="@dimen/_15sdp"
                  android:id="@+id/rvFinalBidListSingleDigit"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:overScrollMode="never"
                  android:nestedScrollingEnabled="false"
                  android:scrollbars="vertical"
                  tools:itemCount="5"
                  tools:listitem="@layout/row_submit_single_digit_data" />


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/_15sdp"
                  android:paddingHorizontal="@dimen/_20sdp"
                  android:orientation="vertical">


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:weightSum="2">

                      <LinearLayout
                          android:layout_weight="1"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:gravity="center"
                          android:orientation="vertical">


                          <TextView
                              android:id="@+id/tvTotalBid"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/glacial_regular"
                              android:gravity="center"
                              android:text="0"
                              android:textColor="@color/black"
                              android:textSize="@dimen/_15sdp" />

                          <TextView
                              android:layout_marginTop="@dimen/_3sdp"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/glacial_regular"
                              android:gravity="center"
                              android:text="@string/total_bids"
                              android:textColor="@color/black"
                              android:textSize="@dimen/_10sdp" />

                      </LinearLayout>

                      <LinearLayout
                          android:layout_weight="1"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:gravity="center"
                          android:orientation="vertical">


                          <TextView
                              android:id="@+id/tvTotalBidAmount"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/glacial_regular"
                              android:gravity="center"
                              android:text="0"
                              android:textColor="@color/black"
                              android:textSize="@dimen/_15sdp" />

                          <TextView
                              android:layout_marginTop="@dimen/_3sdp"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/glacial_regular"
                              android:gravity="center"
                              android:text="@string/total_bid_amount"
                              android:textColor="@color/black"
                              android:textSize="@dimen/_10sdp" />

                      </LinearLayout>

                  </LinearLayout>


                  <LinearLayout
                      android:layout_marginTop="@dimen/_6sdp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:weightSum="2">

                      <LinearLayout
                          android:layout_weight="1"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:gravity="center"
                          android:orientation="vertical">


                          <TextView
                              android:id="@+id/tvBeforeWalletBalance"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/glacial_regular"
                              android:gravity="center"
                              android:text="0"
                              android:textColor="@color/black"
                              android:textSize="@dimen/_15sdp" />

                          <TextView
                              android:layout_marginTop="@dimen/_3sdp"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/glacial_regular"
                              android:gravity="center"
                              android:text="@string/wallet_before_deduction"
                              android:textColor="@color/black"
                              android:textSize="@dimen/_10sdp" />

                      </LinearLayout>

                      <LinearLayout
                          android:layout_weight="1"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:gravity="center"
                          android:orientation="vertical">


                          <TextView
                              android:id="@+id/tvWalletAfterDeduct"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/glacial_regular"
                              android:gravity="center"
                              android:text="0"
                              android:textColor="@color/black"
                              android:textSize="@dimen/_15sdp" />

                          <TextView
                              android:layout_marginTop="@dimen/_3sdp"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/glacial_regular"
                              android:gravity="center"
                              android:text="@string/wallet_after_deduction"
                              android:textColor="@color/black"
                              android:textSize="@dimen/_10sdp" />

                      </LinearLayout>

                  </LinearLayout>



                  <TextView
                      android:layout_marginTop="@dimen/_12sdp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/glacial_regular"
                      android:gravity="start|center_vertical"
                      android:textAlignment="viewStart"
                      android:includeFontPadding="false"
                      android:text="@string/bid_played_toast"
                      android:textColor="@color/black"
                      android:textSize="@dimen/_11sdp" />




              </LinearLayout>



              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/_42sdp"
                  android:layout_marginTop="@dimen/_12sdp"
                  android:layout_marginBottom="@dimen/_8sdp"
                  android:orientation="horizontal"
                  android:paddingHorizontal="@dimen/_12sdp"
                  android:weightSum="2">

                  <RelativeLayout
                      android:id="@+id/tabSubmit"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:background="@drawable/dr_ractengle_round_edge_solid_ripple_effect"
                      android:orientation="vertical">

                      <RelativeLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_alignParentTop="true"
                          android:layout_centerHorizontal="true"
                          android:layout_marginHorizontal="@dimen/_2sdp"
                          android:layout_marginVertical="@dimen/_4sdp"
                          android:background="@drawable/ractengle_solid_round_edge_primary"
                          android:elevation="@dimen/_2sdp"
                          android:gravity="center"
                          android:orientation="vertical"
                          android:paddingHorizontal="@dimen/_15sdp">

                          <TextView
                              android:id="@+id/tvSubmit"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_centerHorizontal="true"
                              android:layout_centerVertical="true"
                              android:fontFamily="@font/glacial_regular"
                              android:gravity="center"
                              android:text="@string/submit"
                              android:textColor="@color/white"
                              android:textSize="@dimen/_13sdp" />
                      </RelativeLayout>

                  </RelativeLayout>

                  <RelativeLayout
                      android:id="@+id/tabCancel"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:background="@drawable/dr_ractengle_round_edge_solid_ripple_effect"
                      android:orientation="vertical">

                      <RelativeLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_alignParentTop="true"
                          android:layout_centerHorizontal="true"
                          android:layout_marginHorizontal="@dimen/_2sdp"
                          android:layout_marginVertical="@dimen/_4sdp"
                          android:background="@drawable/ractengle_stroke_round_edge_primary"
                          android:elevation="@dimen/_2sdp"
                          android:gravity="center"
                          android:orientation="vertical"
                          android:paddingHorizontal="@dimen/_15sdp">

                          <TextView
                              android:id="@+id/tvCancel"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_centerHorizontal="true"
                              android:layout_centerVertical="true"
                              android:fontFamily="@font/glacial_regular"
                              android:gravity="center"
                              android:text="@string/cancel"
                              android:textColor="@color/black"
                              android:textSize="@dimen/_13sdp" />

                      </RelativeLayout>

                  </RelativeLayout>


              </LinearLayout>


          </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>
</layout>