<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="26dp"
    app:cardCornerRadius="35dp"
    app:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color_primary_20"
            android:fontFamily="@font/semibold"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/add_address_details"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">
            <ImageView
                android:layout_width="@dimen/_130sdp"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_130sdp"
                android:src="@drawable/app_logo"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
             android:layout_marginBottom="10dp"
                android:background="@drawable/bg_editext_circle_black"
                android:hint="@string/add_address"
                android:inputType="textCapSentences"
                android:maxLength="80"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/new_color_hint"
                android:fontFamily="@font/regular"
                android:textSize="@dimen/text_16"
                 />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_editext_circle_black"
                android:hint="@string/city"
                android:inputType="textCapSentences"
                android:maxLength="40"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textColorHint="@color/new_color_hint"
                android:fontFamily="@font/regular"
                android:textSize="@dimen/text_16" />

            <EditText
                android:id="@+id/etZipCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_editext_circle_black"
                android:hint="@string/pin_code"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textColorHint="@color/new_color_hint"
                android:fontFamily="@font/regular"
                android:textSize="@dimen/text_16" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  android:layout_weight="1"
                    android:background="@drawable/ractengle_gradian_round_edge"
                    android:fontFamily="@font/semibold"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_margin="3dp"
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_pink_stroke"
                    android:fontFamily="@font/semibold"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/new_colorAccent"
                    android:textSize="@dimen/text_16" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>